<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#053262"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="412dp"
        android:layout_height="259dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066"
        app:srcCompat="@drawable/e_stock" />

    <Button
        android:id="@+id/kulGiris"
        android:layout_width="202dp"
        android:layout_height="53dp"
        android:layout_marginTop="84dp"
        android:backgroundTint="#2AB89C"
        android:onClick="onKulGirisClick"
        android:text="Kullanıcı Giriş"
        android:textColor="#F1ECEC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/yetgiris"
        android:layout_width="208dp"
        android:layout_height="52dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="#2AB89C"
        android:onClick="onYetGirisClick"
        android:text="Yetkili Giriş"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kulGiris" />

</androidx.constraintlayout.widget.ConstraintLayout>